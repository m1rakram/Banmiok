<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/esasback"
    tools:context="com.example.mirakram.banmiok.ResultActivity">
    <Button
        android:text="Sualın şərhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/serhing"
        android:background="@drawable/shapebutton"
        style="@android:style/Widget.Material.Button"
        android:layout_above="@+id/anas"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Appelyasiya şikayəti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/apping"
        android:background="@drawable/shapebutton"
        style="@android:style/Widget.Material.Button"
        android:layout_above="@+id/serhing"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Növbəti sual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/novbeti"
        android:background="@drawable/shapebutton"
        style="@android:style/Widget.Material.Button"
        android:layout_above="@+id/apping"
        android:layout_alignParentStart="true" />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8584547019777134/3738967798">
    </com.google.android.gms.ads.AdView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/novbeti">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submitting"
                android:textAlignment="center"
                android:textSize="24dp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:text="Ana səhifə"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/anas"
        android:background="@drawable/shapebutton"
        style="@android:style/Widget.Material.Button"
        android:layout_above="@+id/adView"
        android:layout_alignParentStart="true" />


</RelativeLayout>
