<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mirakram.banmiok.AboutActivity"
    android:background="@drawable/esasback">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="İdarə heyəti"
        android:textSize="30sp"
        android:id="@+id/textView2"
        android:gravity="center"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/banmioklogo"
                android:id="@+id/imageView6" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Bakı Ali Neft Məktəbi İntellektual Oyunlar Klubu 2013-cü ildə gənclərin intellektual potensialını aşkarlamaq, inkişaf etdirmək və onların asudə vaxtını səmərəli keçirmələrini təmin etmək məqsədi ilə yaradılmışdır. Klubda hər həftə, Bakı Ali Neft Məktəbinin, “Azərbaycan” İntellektual Oyunlar Klubunun və Azərbaycan Tələbə Gənclər Təşkilatları İttifaqının dəstəyi ilə universitetlərarası sinxron turnir keçirilir və eləcə də BANM daxili NHN (Nə? Harada? Nə Zaman?), Xəmsə, Brain Ring və sairə kimi intellektual oyunlar üzrə çempionatlar təşkil olunur. Yarandığı gündən Bakı Ali Neft Məktəbində uğurlu layihələrə imza atmaqla yanaşı klubumuz həm də universitetdən kənar intellektual arenadakı yarışlarda da komandalarımız tərəfindən uğurla təmsil olunur. "
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/birci"
                android:id="@+id/imageView7" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="İnsaf Səmədov\nKlub 2013 – cü ildə Kimya mühəndisliyi ixtisası 2017 – ci il məzunu, İnsaf Səmədov tərəfindən yaradılmışdır. Həmçinin, klubun ilk prezident vəzifəsini icra etmişdir. Rəhbər olduğu dövrdə universitet daxilində kluba və intellektual oyunlara yetəri qədər maraq yaratmağı bacarmışdır."
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/ikci"
                android:id="@+id/imageView20" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Anar Bədəlbəyli\nHal – hazırda Kimya mühəndisliyi ixtisası 4 – cü kurs tələbəsi olan Anar Bədəlbəyli 2015 – ci ildə klub - daxili seçki vasitəsi ilə prezident seçilərək 2015 – 2017 – ci illər müddətində kluba rəhbərlik etmişdir. Rəhbərlik etdiyi dönəmdə digər universitet klubları ilə əlaqələri gücləndirmiş və BANM İOK – u universitet daxilində ən fəal klub halına gətirmişdir."
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/ideya"
                android:id="@+id/imageView21" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Əsəd Əsədli\n2017 – ci ilin aprel ayından kluba Kimya mühəndisliyi ixtisası 3 – cü kurs tələbəsi Əsəd Əsədli rəhbərlik edir. BANM İOK APP – in ideya müəllifidir."
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/miri"
                android:id="@+id/imageView28" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Mirəkrəm Ağalarov\n Proseslərin Avtomatlaşdırılması Mühəndisliyi ixtisası üzrə təhsil alan Mirəkrəm Ağalarov BANM İOK APP-in qurucusudur. Mobile software developerdir."
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="\n\nKlub hər il sentyabr ayında yenilənən, təqribən 10 nəfər üzvü olan idarə heyəti tərəfindən idarə olunur."
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
